theorem Disjoint Pair
premise ∀ x → ∈ $0 A ¬ ∈ $0 B
take x {
  assume ∈ $0 ∩ A B {
    prove ∈ $0 A
    prove ∈ $0 B
    prove ¬ ∈ $0 B
    prove ⊥
  }
  prove ¬ ∈ $0 ∩ A B
}
prove = ∩ A B ∅
qed

theorem Disjoint Pair
premise ∀ x → ∈ $0 A ¬ ∈ $0 B
prove = ∩ A B ∅
prove = ∩ B A ∩ A B
prove = ∩ B A ∅
qed
