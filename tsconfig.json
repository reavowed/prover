{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "./src/main/js/**/*"
    ]
}
