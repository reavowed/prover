{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "jsx": "preserve",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "src/main/js/@types"
        ]
    },
    "include": [
        "./src/main/js/**/*"
    ]
}
